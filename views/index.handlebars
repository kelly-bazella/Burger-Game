<div class="row">
    <div class="col-md-6">
        <h2>Burger Menu</h2>
        <ul>
            {{#each burgers}}
            {{#unless this.devoured}}
            <li>{{this.burger_name}} <button type="submit" value="{{this.id}}" class="burger-button">Devour</button>
            </li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-md-6">
        <h2>Devoured</h2>
        <ul>
            {{#each burgers}}
            {{#if this.devoured}}
            <li>{{this.burger_name}}</li>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
<div class="row">
    <div class="col-4"></div>
    <div class="col-4">
        <h1> Add a Burger </h1>
        <form action="/add" method="POST">
            <input type="text" id="userInput" name="burger_name" placeholder="Enter Burger Name Here...">
            <button type="submit" id="submitBurger" class="btn btn-secondary">Submit</button>
        </form>
    </div>
    <div class="col-4"></div>
</div>
